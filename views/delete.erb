<% if @note %>
	<p>Are you sure you want to delete this note: <em>"<%=h @note.content %>"</em>?</p>
	<form action="/<%= @note.id %>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Yes, delete it!">
		<a href="/<%= @note.id %>">Keep note</a>
	</form>
<% else %>
	<p>Note note found.</p>
<% end %>